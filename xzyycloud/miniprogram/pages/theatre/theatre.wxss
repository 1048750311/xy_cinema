.top-nav {
  height: 90rpx;
  border-bottom: 1px solid #e6e6e6;
}

.top-nav-inner {
  display: flex;
  align-items: center;
  height: 90rpx;
  justify-content: space-between;
}
/* 自动定位城市容器 */
.city-entry {
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 15px;
  color: #666;
}
/* 自动定位城市名称 */
.city-entry .city-name {
  max-width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 自动定位城市箭头 */
.city-entry .city-entry-arrow{
  width: 0;
  height: 0;
  border: 8rpx solid #b0b0b0;
  border-left-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  display: inline-block;
  margin-left: 8rpx;
  margin-top: 10rpx;
}

.search-view {
  width: 570rpx;
}
.search-view .input {
  width: 480rpx; 
  min-height: 78rpx;
  display: block;
  float: right;
  font-size:0.9em; color:#666;
}
.ph{
  font-size:0.9em; 
  color:#666; 
  padding-top: 4rpx;
}
/* 搜索图标 */
.search-icon {
  width: 40rpx;
  height: 40rpx;
  float: right;
  background: url(data:image/png;base64,) no-repeat;
